<header>
  <h3> Buy some Awesome Kombucha </h3>
  <p> The only real choice is how many... </p>
</headers>

<%= form_for @order do |f| %>
  <div class='form-inline'>
    <div class='form-group'>
      <label class="sr-only" for="quantity"> Quantity </label>
      <div class='input-group'>
        <div class="input-group-addon"> I want </div>
        <%= f.number_field :quantity, class: 'form-control', placeholder: 'Quantity', min: 0 %>
        <div class="input-group-addon" > bottles for a total of $</div>
        <input type='text' disabled id='order-total-cost' value=0 class='form-control'> </input>
        <div class="input-group-addon">.00</div>
      </div>
    </div>
  </div>
  <h4> Shipping Information </h4>
  
  <div class='form-inline'>
    <div class='form-group'>
      <label class="sr-only" for="firstName"> First Name </label>
      <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
      <label class="sr-only" for="lastName"> Last Name </label>
      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
    </div>
  </div>
  
  </br>
  
  <div class='form-group'>
    <label class="sr-only" for="address">  Address </label>
    <%= f.text_field :address, class: 'form-control', placeholder: 'Full Address'%>
  </div>
  
  <div class='form-group'>
    <label class="sr-only" for="country">  Country </label>
    <%= f.text_field :country, class: 'form-control', placeholder: 'Country'%>
  </div>

  
  <h4> Now for the money (payment info) </h4>
  
  <div class='form-group'>
    <label class="sr-only" for="creditCardNumber"> Credit Card Number </label>
    <%= f.text_field :credit_card_number, class: 'form-control', placeholder: 'Credit Card Number' %>
  </div>
  
  <div class='form-group'>
    <label class="sr-only" for="creditCardSecretCode"> Credit Code Secret Code </label>
    <%= f.text_field :credit_card_code, class: 'form-control', placeholder: 'Credit Card Secret Code' %>
  </div>
  
  <div class='form-group'>
    <label class="sr-only" for="creditCardExpiration"> Credit Code Expiration </label>
    <%= f.text_field :credit_card_date, class: 'form-control', placeholder: 'Credit Card Expiration MM/YY' %>
  </div>
  
  <%= f.submit 'Submit Order', class: 'btn btn-primary' %>
  
<% end %>